<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginTop="44dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/conversations_row"
        android:background="#30303c"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="4dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:background="#30303c"
            android:id="@+id/userActive">

        </RelativeLayout>

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:srcCompat="@drawable/cast_expanded_controller_seekbar_thumb"
            android:id="@+id/userImage"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:cropToPadding="false" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/userImage"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:text="TextView"
            android:id="@+id/userMessage"
            android:layout_marginLeft="4dp"
            android:textColor="#999"
            android:maxLines="2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="4dp"
            android:layout_below="@+id/userName"
            android:layout_alignEnd="@+id/userTime"
            android:layout_toEndOf="@+id/userImage" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userTime"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textSize="14sp"
            android:layout_above="@+id/userMessage"
            android:layout_alignParentEnd="true"
            android:textColor="#999" />
    </RelativeLayout>
</RelativeLayout>